<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">
    tools:context=".Search">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@android:string/search_go"
            android:textColor="#FFFF"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="City"
            android:textColor="#FFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="160dp"
            android:text="Date"
            android:textColor="#FFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:text="From"
            android:textColor="#FFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:text="To"
            android:textColor="#FFFF"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="City"
            android:textColor="#FFFF" />

        <EditText
            android:id="@+id/editDateFrom"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="200dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="2/12/2019"
            android:textColor="#306571" />

        <EditText
            android:id="@+id/editDateTo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="270dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="2/12/2019"
            android:textColor="#306571" />

        <Button
            android:id="@+id/buttonDaily"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:layout_marginTop="315dp"
            android:background="#50FFFFFF"
            android:text="Daily" />

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:layout_marginTop="380dp"
            android:background="#50FFFFFF"
            android:text="Clear" />

        <Button
            android:id="@+id/buttonSel"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="380dp"
            android:background="#50FFFFFF"
            android:text="@android:string/selectAll" />

        <Button
            android:id="@+id/buttonDis"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="380dp"
            android:background="#50FFFFFF"
            android:text="diselect all" />

        <Button
            android:id="@+id/buttonWeekly"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="315dp"
            android:background="#50FFFFFF"
            android:text="Weekly" />

        <Button
            android:id="@+id/buttonMonthly"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="315dp"
            android:background="#50FFFFFF"
            android:text="Montly" />

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="530dp"
            android:background="#50FFFFFF"
            android:text="@android:string/search_go" />

        <Button
            android:id="@+id/buttonSearch2"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="530dp"
            android:background="#50FFFFFF"
            android:text="Advanced Search" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:checked="true"
            android:text="OpenWeather"
            android:textColor="#FFFF" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="490dp"
            android:checked="true"
            android:text="DarkSky"
            android:textColor="#FFFF" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="490dp"
            android:checked="true"
            android:text="WeatherBit"
            android:textColor="#FFFF" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="490dp"
            android:text="Only From Service"
            android:textColor="#FFFF" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="450dp"
            android:checked="true"
            android:text="AccuWeather"
            android:textColor="#FFFF" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="450dp"
            android:checked="true"
            android:text="WeatherStack"
            android:textColor="#FFFF" />
    </FrameLayout>

</FrameLayout>